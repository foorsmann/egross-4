.prod__option-label__quantity {
  display: block;
}

.form__input-wrapper--select.flex-1 {
  margin-bottom: 0 !important;
}

/* Hide empty product form errors */
.prod__form-error:empty {
  display: none;
  padding-top: 0 !important;
  margin-top: 0 !important;
}

.prod__form-error:not(:empty) {
  display: block;
}

/* Sticky ATC error display */
.sticky-atc-error {
  position: absolute;
  top: -100%;
  left: 50%;
  width: 70%;
  max-width: calc(var(--container-width, 1280) * 1px);
  margin-left: 0;
  margin-right: 0;
  padding: .5rem 1rem;
  background: #ef4444;
  color: #fff;
  border: 1px solid #b91c1c;
  border-radius: 4px;
  box-shadow: 0 2px 6px #0003;
  transform: translate(-50%, -100%);
  opacity: 0;
  z-index: 60;
  transition: transform .3s ease, opacity .3s ease;
  pointer-events: auto;
}
.sticky-atc-error.show {
  opacity: 1;
  transform: translate(-50%, 0);
}
.sticky-atc-error:empty {
  display: none;
}
.sticky-atc-error__msg {
  display: block;
}
